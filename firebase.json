{
    "hosting": {
        "site": "dailynews-app-2026",
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "function": "app"
            },
            {
                "source": "/health",
                "function": "app"
            },
            {
                "source": "**",
                "destination": "/app.html"
            }
        ]
    },
    "functions": {
        "source": "functions"
    }
}