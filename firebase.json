{
    "hosting": {
        "site": "dailynews-app-2026",
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [
            {
                "source": "/**",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache, no-store, must-revalidate"
                    }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "function": "app"
            },
            {
                "source": "/health",
                "function": "app"
            },
            {
                "source": "**",
                "destination": "/app.html"
            }
        ]
    },
    "functions": {
        "source": "functions"
    }
}